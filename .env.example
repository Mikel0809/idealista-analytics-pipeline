# API Credentials
IDEALISTA_API_KEY=your_api_key_here
IDEALISTA_SECRET=your_secret_here

# Madrid Real Estate Analytics Pipeline - Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# BigQuery Configuration (REQUIRED)
# ====================
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET=raw_data
BIGQUERY_LOCATION=EU

# ====================
# API Configuration (OPTIONAL - defaults provided)
# ====================
# RapidAPI key for Idealista access
# Get your key at: https://rapidapi.com/idealista/api/idealista7
RAPIDAPI_KEY=your_rapidapi_key_here

# ====================
# Airflow Configuration (OPTIONAL)
# ====================
AIRFLOW_HOME=${PWD}/airflow
IDEALISTA_PROJECT_ROOT=${PWD}

# ====================
# dbt Configuration (OPTIONAL)
# ====================
DBT_PROFILES_DIR=~/.dbt
DBT_PROJECT_DIR=${PWD}/dbt

# ====================
# Logging (OPTIONAL)
# ====================
LOG_LEVEL=INFO
PYTHONFAULTHANDLER=true

# Extraction Settings
EXTRACTION_CITIES=madrid,barcelona
EXTRACTION_PROPERTY_TYPES=sale,rent
EXTRACTION_MAX_PAGES=10
EXTRACTION_FREQUENCY=daily

# Application Settings
ENVIRONMENT=development
